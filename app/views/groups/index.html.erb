<div class="row">
<div class="col-sm-4">
<div class="panel panel-default">
<div class="panel-heading">
  <div class="container">

    <h4>My Groups</h4>
</div>
<div id="allGroups" class="panel-body">
  <% @groups.each do |mygroup| %>
  <% if @user.id== mygroup.user_id %>
  <div id='group_row' class="row">
    <div class='col-sm-4'>
    <h5><%=mygroup.name %></h5>
  </div>
  <div class='col-sm-4'>
    <button id='add_members' name='<%=mygroup.name %>' val='<%=mygroup.id%>' class='glyphicon glyphicon-plus-sign btn btn-primary'></button>
  </div>
  <div class='col-sm-4'>
    <button id='delete_group' name='<%=mygroup.name %>' val='<%=mygroup.id%>' class='glyphicon glyphicon-remove-sign btn btn-danger'></button>
  </div>
  </div>

<br/>
<% end %>
<% end %>


</div>
</div>
</div>
</div>


