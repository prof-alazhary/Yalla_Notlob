<div class="container">
<div class="text-center">
<div class="row">
<div class="col-sm-12">

  <div class="form-group">
    <label for="">group</label>
    <input class="form-control" placeholder="Group Name" type="text" id="group_name">
  </div>
     <button id="addGroup" type="button" name="button" class="btn btn-primary" >Add Group</button>
</div>
</div>

</div>
